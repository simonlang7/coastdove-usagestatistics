<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app_details.AppDetailsActivity"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detectable_app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="simonlang.coastdove.usagestatistics.app_details.AppUsageDataListFragment"
        android:id="@+id/fragment_app_usage_data_list"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/list_item_app_usage_data" />


</LinearLayout>